{% extends '::base.html.twig' %}

{% block body %}
    <content>
    <table class="table user-list" >
        <thead>
        <tr>
            <th align="center"><span>Username</span></th>
            <th align="center"><span>Name and Surname</span></th>
            <th align="center"><span>Role</span></th>
            <th align="center"><span>Status</span></th>
        </tr>
        </thead>
        <tbody >
        <tr>
            {% for user in users %}
            <td width="200" >
                {{ user.username }}
            </td>
            <td width="200" >
                {{ user.firstname }} {{ user.lastname }}
            </td>
            <td width="200" >
                {{ user.role }}
            </td>
            <td width="200"  >
                {%  if user.active %} Active {% else %} Inactive   {% endif %}
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if maxPages > 1 %}
        <ul class="pagination pagination-sm">
            <td {{ thisPage == 1 ? 'class="disabled"' }}>
                <a href="1">«</a>
            </td>
            {% for pageNumber in 1..maxPages %}
                <td {{ thisPage == pageNumber ? 'class="active"' }}>
                    <a href="{{ pageNumber }}">{{ pageNumber }}</a>
                </td>
            {% endfor %}


            <td {{ thisPage == maxPages ? 'class="disabled"' }}>
                <a href="{{ maxPages }}">»</a>
            </td>
        </ul>
    {% endif %}
    </content>
{% endblock %}
