{% extends 'admin/base.html.twig' %}

{% form_theme form _self 'bootstrap_3_layout.html.twig' %}

{% block _quiz_questions_widget %}
    {{ form_widget(form) }}

    <button type="button" class="btn btn-sm btn-primary add-question-button">
        <span class="glyphicon glyphicon-plus"></span> Add Question
    </button>
{% endblock %}

{% block _quiz_questions_entry_label %}
    <label>Question #{{ form.vars.name }}</label>
{% endblock %}

{% block _quiz_questions_entry_widget %}
    {{ form_widget(form, {attr: {'data-name': form.vars.name}}) }}
{% endblock %}

{% block _quiz_questions_entry_answers_widget %}

    {{ form_widget(form) }}

    <button type="button" class="btn btn-sm btn-warning add-answer-button">
        <span class="glyphicon glyphicon-plus"></span>
        Add Answer
    </button>
{% endblock %}

{% block _quiz_questions_entry_answers_entry_label %}
    <label>Answer #{{ form.vars.name }}</label>
{% endblock %}

{% block content %}
    <div class="col-md-10">
        {{ parent() }}
        <div class="center-panel">
            <div class="panel-heading">
                <h1 class="panel-title">
                    {% block form_title %}{% endblock %}
                </h1>
            </div>

            <div class="panel-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}

                {% block edit_form %}{% endblock %}

                <input type="submit" value="{{ block('form_title') }}"
                       class="btn btn-success pull-right submit"/>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
