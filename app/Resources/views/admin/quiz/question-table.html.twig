<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                <h1 class="panel-title">Questions</h1>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-sm btn-primary btn-create"
                        href="{{ path('admin.question.create') }}"
                >
                    Create New
                </a>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Question</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for question in form.vars.value.questions %}
            <tr>

                <td>
                    {{ question.text }}
                </td>
                <td>
                    <a href="{{ path('admin.question.edit', {'question' : question.id}) }}"
                       class="btn btn-sm btn-success btn-edit">
                        <i class="glyphicon glyphicon-pencil"></i>
                        Edit
                    </a>
                </td>
                <td>
                    <a href="#"
                       class="btn btn-sm btn-success btn-danger">
                        <i class="glyphicon glyphicon-pencil"></i>
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
</div>
