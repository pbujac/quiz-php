{% embed ":admin/table:table.html.twig" %}

    {% block title_table %}Questions{% endblock %}

    {% block create_new_path %}
        {{ path('admin.question.create', {'quiz_id' : form.vars.value.id}) }}
    {% endblock %}

    {% block head_table %}
        <th class="text-center">Title</th>
        <th class="text-center">Actions</th>
    {% endblock %}

    {% block body_table %}

        {% for question in form.vars.value.questions %}

            <tr>
                <td>
                    {{ question.text }}
                </td>
                <td>
                    <a href="{{ path('admin.question.edit', {'question_id' : question.id}) }}"
                       class="btn btn-sm btn-success btn-edit">
                        <i class="glyphicon glyphicon-pencil"></i>
                        Edit
                    </a>
                    <form class="inline-form"></form>
                    <form class="inline-form"
                          action="{{ path('admin.question.delete', {'question_id' : question.id}) }}">
                        <button class="btn btn-sm btn-danger btn-edit"
                                type="button"
                                data-toggle="modal"
                                data-target="#confirmDelete"
                                data-title="Delete Question"
                                data-message="Are you sure you want to delete this question ?">
                            <i class="glyphicon glyphicon-trash"></i>
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    {% endblock %}

{% endembed %}
