{% extends 'admin/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block content %}

    <div class="col-md-10">

        {{ parent() }}

        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-6">
                        <h1 class="panel-title">Categories</h1>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="{{ path('admin.category.create') }}"
                           class="btn btn-sm btn-primary btn-create">
                            Create New
                        </a>
                    </div>
                </div>
            </div>

            <table class="table text-center">
                <thead>
                <tr>
                    <th class="text-center">Title</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>

                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>
                            {{ category.title }}
                        </td>
                        <td>
                            <a href="{{ path('admin.category.edit', {'category': category.id}) }}"
                               class="btn btn-sm btn-success btn-edit">
                                <i class="glyphicon glyphicon-pencil"></i>
                                Edit
                            </a>
                            {% if category.quizzes is empty %}
                                <form class="inline-form"
                                      action="{{ path('admin.category.delete' , {'category': category.id}) }}">
                                    <button class=" btn btn-sm btn-danger btn-edit"
                                            type="button"
                                            data-toggle="modal"
                                            data-target="#confirmDelete"
                                            data-title="Delete Category"
                                            data-message="Are you sure you want to delete this category ?">
                                        <i class="glyphicon glyphicon-trash"></i>
                                        Delete
                                    </button>
                                </form>
                            {% else %}
                                <button class="disabled btn btn-sm btn-danger btn-edit">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    Delete
                                </button>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>

            {{ include('admin/table/pagination.html.twig', { 'path': 'admin.category.list' }) }}
        </div>

        {% include 'admin/modal/confirm-modal.html.twig' %}
    </div>
{% endblock %}
