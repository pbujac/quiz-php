<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                <h1 class="panel-title">Categories</h1>
            </div>
            <div class="col-md-6 text-right">
                <a href="{{ path('admin.category.create') }}"
                   class="btn btn-sm btn-primary btn-create">
                    Create New
                </a>
            </div>
        </div>
    </div>

    <table class="table text-center">
        <thead>
        <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    {{ category.title }}
                </td>
                <td>
                    <a href="{{ path('admin.category.edit', {'category': category.id}) }}"
                       class="btn btn-sm btn-success btn-edit">
                        <i class="glyphicon glyphicon-pencil"></i>
                        Edit
                    </a>
                    {% if category.quizzes is empty %}
                        <form class="inline-form"
                              action="{{ path('admin.category.delete' , {'category': category.id}) }}">
                            <button class=" btn btn-sm btn-danger btn-edit"
                                    type="button"
                                    data-toggle="modal"
                                    data-target="#confirmDelete"
                                    data-title="Delete Category"
                                    data-message="Are you sure you want to delete this category ?">
                                <i class="glyphicon glyphicon-trash"></i>
                                Delete
                            </button>
                        </form>
                    {% else %}
                        <button class="disabled btn btn-sm btn-danger btn-edit">
                            <i class="glyphicon glyphicon-trash"></i>
                            Delete
                        </button>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    <div class="panel-footer">
        <div class="row">
            <div class="col col-xs-4">Page {{ currentPage }} of {{ maxPages }}
            </div>
            <div class="col col-xs-8">
                <ul class="pagination hidden-xs pull-right">
                    {% if maxPages >= 1 %}
                        <ul class="pagination pagination-sm">

                            <li {{ currentPage == 1 ? 'class="disabled"' }}>
                                <a href="{{ path('admin.category.list') }}">«</a>
                            </li>

                            {% for pageNumber in 1..maxPages %}
                                <li {{ currentPage == pageNumber ? 'class="active"' }}>
                                    <a href="{{ path('admin.category.list', {'page': pageNumber }) }}">
                                        {{ pageNumber }}
                                    </a>
                                </li>
                            {% endfor %}

                            <li {{ currentPage == maxPages ? 'class="disabled"' }}>
                                <a href="{{ path('admin.category.list', {'page':  maxPages }) }}">»</a>
                            </li>
                        </ul>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>
