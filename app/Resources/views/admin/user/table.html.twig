<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                <h1 class="panel-title">Users</h1>
            </div>

            <div class="col-md-6 text-right">
                <a href="{{ path('admin.user.create') }}" class="btn btn-sm btn-primary btn-create">
                    Create New
                </a>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Username</th>
            <th>Name and Surname</th>
            <th>Password</th>
            <th>Role</th>
            <th>Status</th>
        </tr>
        </thead>

        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    {{ user.username }}
                </td>
                <td>
                    {{ user.firstname }} {{ user.lastname }}
                </td>
                <td>
                    {{ user.password }}
                </td>
                <td>
                    {{ user.roles|join(', ') }}
                </td>
                <td>
                    {% if user.active %} Active {% else %} Inactive {% endif %}
                </td>
                <td >
                    <a href="{{ path('admin.user.enable', {'user_id': user.id }) }}">
                        Change state
                    </a>
                    <a href="{{ path('admin.user.edit', {'user_id': user.id}) }}"
                       class="btn btn-sm btn-success btn-edit">
                        <i class="glyphicon glyphicon-pencil"></i>
                        Edit
                    </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    <div class="panel-footer">
        <div class="row">
            <div class="col col-xs-4">Page {{ currentPage }} of {{ maxPages }}
            </div>
            <div class="col col-xs-8">
                <ul class="pagination hidden-xs pull-right">
                    {% if maxPages >= 1 %}
                        <ul class="pagination pagination-sm">

                            <li {{ currentPage == 1 ? 'class="disabled"' }}>
                                <a href="{{ path('admin.user.list') }}">«</a>
                            </li>

                            {% for pageNumber in 1..maxPages %}
                                <li {{ currentPage == pageNumber ? 'class="active"' }}>
                                    <a href="{{ path('admin.user.list', {'page': pageNumber }) }}">
                                        {{ pageNumber }}
                                    </a>
                                </li>
                            {% endfor %}

                            <li {{ currentPage == maxPages ? 'class="disabled"' }}>
                                <a href="{{ path('admin.user.list', {'page':  maxPages }) }}">»</a>
                            </li>
                        </ul>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>
